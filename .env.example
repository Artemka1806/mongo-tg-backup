# MongoDB налаштування
MONGODB_URI=mongodb://username:password@host:27017/database?directConnection=true&authSource=admin

# Telegram USER BOT налаштування
# Отримайте API_ID та API_HASH на https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# ID чату куди відправляти бекапи
# Для отримання ID чату відправте повідомлення @userinfobot
# Або для груп: додайте @raw_data_bot в групу і він покаже ID
# ID може бути:
# - Позитивним числом для особистих чатів (123456789)
# - Негативним для груп (-1001234567890)
# - Username з @ (@mychannel)
TELEGRAM_CHAT_ID=your_chat_id

# Налаштування бекапів
BACKUP_INTERVAL_MINUTES=5
KEEP_LOCAL_BACKUPS=10

# Перевірка доступності ботів
CONTROL_API_URL=https://example.com
CONTROL_API_KEY=your_control_api_key
BOT_CHECK_INTERVAL_MINUTES=60

# Назва session файлу (опціонально)
SESSION_NAME=mongodb_backup_userbot
